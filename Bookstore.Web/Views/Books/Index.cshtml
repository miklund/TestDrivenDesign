@model Bookstore.Web.Books.Book[]

@{
    ViewBag.Title = "List of books";
    Layout = "../Layouts/_MainLayout.cshtml";
}

<h1>List of books</h1>
<table id="booksTbl">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Published</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model) {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Published.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>